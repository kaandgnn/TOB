                            </td>
                            <td class="display-6 nav-text">
                                <%= announceList[i].data.matchLocation %>
                            </td>
                            <td class="display-6 nav-text">
                                <%= announceList[i].data.matchDate %>
                            </td>
                            <td class="display-6 nav-text">
                                <%= announceList[i].data.position %>
                            </td>
                            <td><button type="button" class="btn btn-danger btn-join" onclick="joinAnnounce(<%= i %>)">KATIL</button>
                            </td>
                        </tr>
                        <% } %>
