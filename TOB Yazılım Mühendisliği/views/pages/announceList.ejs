<%- include('../parts/header')-%>

    <body>
        <main>
            <table class="table"> 
                <thead>
                    <tr>
                        <th class="display-4 nav-text">TAKIM İSMİ</th>
                        <th class="display-4 nav-text">MAÇ KONUMU</th>
                        <th class="display-4 nav-text">MAÇ TARİHİ</th>
                        <th class="display-4 nav-text">POZİSYON</th>
                        <th class="display-4 nav-text">KATIL</th>
                        <!-- tr satır th başlık tanımlar -->
                    </tr>
                </thead>
